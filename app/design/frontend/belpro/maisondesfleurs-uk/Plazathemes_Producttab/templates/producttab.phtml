			$("ul.tabs li").removeClass("active");
			$(this).addClass("active");
			$(".tab_content").hide();
			$(".tab_content").removeClass("animate1");
			var activeTab = $(this).attr("rel"); 
			$("#"+activeTab) .addClass("animate1");
			$("#"+activeTab).fadeIn(); 
