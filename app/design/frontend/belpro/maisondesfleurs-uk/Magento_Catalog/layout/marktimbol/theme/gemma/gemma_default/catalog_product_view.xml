<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="product.info.main" before="-"/>
	
		<!-- Products' short description -->
		<move element="product.info.overview" destination="product.info.main" after="product.info.price" />

        <!-- Add the Add to Wishlist and Compare button next to Add To Box button -->
        <move element="product.info.addto" destination="product.info.addtocart.additional" />

        <move element="product.info.stock.sku" destination="product.info.main" after="product.info.extrahint" />

        <move element="socialbuttons" destination="product.info.main" after="product.info.stock.sku"/>
        
        <move element="availablewebsites" destination="product.info.main" after="socialbuttons" />

<!--         <referenceContainer name="div.sidebar.additional">
            <block class="Plazathemes\Recentproductslider\Block\Products" name="recentproductslider" after="-" template="productslider.phtml" />
        </referenceContainer> -->
    </body>
</page>
